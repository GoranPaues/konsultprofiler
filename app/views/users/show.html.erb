<h1><%=h @user.name %> <%= '(är administratör)' if @user.is_admin && !@user.is_root_admin? %></h1>

<% if @user.photo? %>
  <%= image_tag @user.photo.url, :style => 'float:right;', :width => 200 %>
<% end %>
<p><b>Login:</b> <%=h @user.login %></p>
<p><b>Email:</b> <%=h @user.email %></p>
<%= (links_for_user(@user) + standard_links).compact.join ' | ' %>
