<div class="fields">
  <%= f.select :value, ranking_pairs %>
  <% if  f.object.skill %>
    <%=h f.object.skill.name %>
  <% else %>
    <%= f.select :skill_id, 
		Skill.find(:all, :order => 'name').collect {|s| [s.name, s.id]}, 
		:include_blank => true %>
  <% end %>
  <%= link_to_remove_fields "Ta bort", f %>
</div>
