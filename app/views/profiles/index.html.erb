<h1>Konsultprofiler <%=h "(som kan #{@skill.name})" if @skill %></h1>

<ul>
  <% @profiles.each do |profile| %>
    <li>
      <b><%= link_to h(profile.first_name + " " + profile.last_name), profile %></b>
      (<%= [link_to('PDF', profile_path(profile, :format => :pdf)),
       		(link_to('Redigera', edit_profile_path(profile)) ),
       		(link_to('Ta bort', profile, :confirm => 'Är du säker?', :method => :delete))].compact.join(', ') %>)
    </li>
  <% end %>
</ul>

<%= link_to 'Ny konsultprofil', new_profile_path %> |
<%= link_to 'Sök konsultprofil', new_search_path %>